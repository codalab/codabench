.forum-contact
    margin-top 20px

.forum-contact-email
    color: #4183c4

.forum-post
  background-color #fff
  padding 10px
  width 80%
  border-radius: 5px
  box-shadow 0.5px 0.5px 2px gray

.post-header
  display flex
  justify-content flex-start

.post-user
  margin-right 10px

.post-user-img
  width 50px
  height 50px
  border-radius 50%
  border 1px solid #000

.post-user-name-date
  display flex
  flex-direction column
  justify-content center

.poster-name
  font-size 18px

.posted-date
  font-size 14px
  color #aba8a8
  line-height 1
  margin-top 5px

.post-actions
  margin-left auto
  cursor pointer

.post-content
  margin-left 60px
  margin-right 60px
  padding 10px
  background-color #F5F5F5
  border-radius: 2px

.forum-pin-icon
  color #017BFE
